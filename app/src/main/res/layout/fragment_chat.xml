<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:focusableInTouchMode="true"

    >

    <!--<ListView-->
        <!--android:layout_width="match_parent"-->
        <!--android:id="@+id/messages_view"-->
        <!--android:layout_weight="2"-->
        <!--android:divider="#fff"-->
        <!--android:stackFromBottom="true"-->
        <!--android:transcriptMode="alwaysScroll"-->
        <!--android:layout_height="match_parent"-->
        <!--/>-->


    <android.support.v7.widget.RecyclerView
        android:id="@+id/messagerecycleview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:divider="#fff"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll"
        tools:listitem="@layout/my_message"
        >

    </android.support.v7.widget.RecyclerView>



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/messageToSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ems="10"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:hint="Write a message"
            android:inputType="text"
            android:paddingHorizontal="10dp"
            />

        <ImageButton
            android:id="@+id/SOSSignal"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="20dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitCenter"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/baseline_warning_white_24dp"/>

        <ImageButton
            android:id="@+id/my_location"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="20dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitCenter"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/baseline_my_location_white_24dp" />

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:padding="20dp"
            android:id="@+id/sendButton"
            android:backgroundTint="#ffffff"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/ic_send_black_24dp"/>
    </LinearLayout>
</LinearLayout>